    private void cbPuestoActionPerformed(java.awt.event.ActionEvent evt) {                                         
        cbPuesto.setSelectedItem("Patron");
        cbPuesto.setSelectedItem("Cajero");
        cbPuesto.setSelectedItem("Acomodador");
        cbPuesto.setSelectedItem("Repartidor");
        cbPuesto.setSelectedItem("Liempieza");
        
    }                                        
Empleados obj;
public void limpiar(){
    txtApellidos.setText(null);
    txtCiudad.setText(null);
    txtContraseña.setText(null);
    txtDireccion.setText(null);
    txtNombre.setText(null);
    txtUsuario.setText(null);
    txtclave.setText(null);
}
    private void btnRegistrarActionPerformed(java.awt.event.ActionEvent evt) {                                             
    int IdEmpleado=Integer.parseInt(txtclave.getText());
    String Apellidos=txtApellidos.getText();
    String Nombre=txtNombre.getText();
    String Direccion=txtDireccion.getText();
    String Ciudad=txtCiudad.getText();
    String Puesto=(String) cbPuesto.getSelectedItem();
    String Usuario=txtUsuario.getText();
    String Contraseña=txtContraseña.getText();
    
    obj=new Empleados(IdEmpleado, Apellidos, Nombre, Direccion, Ciudad, Puesto, Usuario, Contraseña);
    consulta();
    
    limpiar();
    }                                            

    private void jButton2ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        frmJefe obj=new frmJefe();
        obj.show();
        this.dispose();
    }                                        

    private void jTextField1ActionPerformed(java.awt.event.ActionEvent evt) {                                            
        // TODO add your handling code here:
    }                                           
ResultSet rs;
PreparedStatement ps;
Connection con;
    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        
        try{
        Class.forName("com.mysql.cj.jdbc.Driver"); 
             con = DriverManager.getConnection("jdbc:mysql://localhost:3307/minisuper?serverTimezone=UTC","root","root"); 
             
        ps=con.prepareStatement("select * from empleados where idempl=?");
        ps.setString(1, txtclave.getText());
        rs=ps.executeQuery();
        if(rs.next()){
            txtclave.setText(rs.getString("idempl"));
            txtApellidos.setText(rs.getString("apellidos"));
            txtNombre.setText(rs.getString("nombre"));
            txtCiudad.setText(rs.getString("cuidad"));
            txtDireccion.setText(rs.getString("direccion"));
            cbPuesto.setSelectedItem(rs.getString("puesto"));
            txtUsuario.setText(rs.getString("usuario"));
            txtContraseña.setText(rs.getString("contrasena"));
        }else{
            System.out.println("no existe un empleado con esta clave");
        }
        } catch (Exception e) {
            System.err.println(e);
        }
        
    }                                        

    private void jButton3ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        try{
        Class.forName("com.mysql.cj.jdbc.Driver"); 
             con = DriverManager.getConnection("jdbc:mysql://localhost:3307/minisuper?serverTimezone=UTC","root","root"); 
             
        ps=con.prepareStatement("UPDATE empleados SET idempl=?, apellidos=?,nombre=?, "
                + "direccion=?, cuidad=?, puesto=?, usuario=?, contrasena=?");
      
        ps.setString(1, txtclave.getText());
        ps.setString(2, txtApellidos.getText());
        ps.setString(3, txtNombre.getText());
        ps.setString(4, txtDireccion.getText());
        ps.setString(5, txtCiudad.getText());
        ps.setString(6, (String) cbPuesto.getSelectedItem());
        ps.setString(7, txtUsuario.getText());
        ps.setString(8, txtContraseña.getText());
        int res=ps.executeUpdate();
        if(res>0){
            System.out.println("Empleado modificado");
        }else{
            System.out.println("no existe un Empleado con esta clave");
        }
        } catch (Exception e) {
            System.err.println(e);
        }
        consulta();
        limpiar();
    }                                        

    private void jButton4ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        try{
        Class.forName("com.mysql.cj.jdbc.Driver"); 
             con = DriverManager.getConnection("jdbc:mysql://localhost:3307/minisuper?serverTimezone=UTC","root","root"); 
             
        ps=con.prepareStatement("delete from empleados where idempl=?");
        ps.setString(1, txtclave.getText());
        int res=ps.executeUpdate();
        if(res>0){
            System.out.println("Empleado eliminado");
        }else{
            System.out.println("error al eliminar Empleado");
        }
        } catch (Exception e) {
            System.err.println(e);
        }
        consulta();
        limpiar();
    }                                        

