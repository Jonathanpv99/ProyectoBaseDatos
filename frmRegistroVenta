    // aqui se hace una consulta a la tabla de datos ventas
    public void consulta(){
        DefaultTableModel model= new DefaultTableModel();
        model.addColumn("id venta");
        model.addColumn("id empleado");
        model.addColumn("nombre cliente");
        model.addColumn("es pedido?");
        model.addColumn("Direccion");
        model.addColumn("C P");
        
        jTable1.setModel(model);
        
        String con="select * from ventas";
        String datos[]=new String[6];
        
        try{
        Class.forName("com.mysql.cj.jdbc.Driver"); 
             cn = DriverManager.getConnection("jdbc:mysql://localhost:3307/minisuper?serverTimezone=UTC","root","root"); 
             if ( cn != null ) { 
  
                  stmt = cn.createStatement(); 
             }
        ResultSet rs=stmt.executeQuery(con);
        while(rs.next()){
            datos[0]=rs.getString(1);
            datos[1]=rs.getString(2);
            datos[2]=rs.getString(3);
            datos[3]=rs.getString(4);
            datos[4]=rs.getString(5);
            datos[5]=rs.getString(6);
            
            model.addRow(datos);
        }
        jTable1.setModel(model);
        } catch (ClassNotFoundException ex) {
           Logger.getLogger(Empleados.class.getName()).log(Level.SEVERE, null, ex);
       } catch (SQLException ex) {
           Logger.getLogger(Empleados.class.getName()).log(Level.SEVERE, null, ex);
       }
        
        finally {
            if (con != null) {
                try {
                    cn.close();
                    stmt.close();
                } catch ( Exception e ) { 
                         System.out.println( e.getMessage());
                }
            }
        }
    
    }

