    venta obj;
    public void limpiar(){
        txtCP.setText(null);
     txtCliente.setText(null);
     txtDireccion.setText(null);
     txtEmpleado.setText(null);
     txtVenta.setText(null);
    }
    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
     int claveVenta=Integer.parseInt(txtVenta.getText());
     int claveEmp=Integer.parseInt(txtEmpleado.getText());
     String NombreClien=txtCliente.getText();
     String Pedido=(String) cbPedido.getSelectedItem();
     String Direccion=txtDireccion.getText();
     String CP=txtCP.getText();
     obj=new venta(claveVenta, claveEmp,NombreClien , Pedido, Direccion, CP);
     consulta();
     limpiar();
     
     
    }                                        

    private void jButton2ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        frmJefe obj=new frmJefe();
        obj.show();
        this.dispose();
    }                                        
ResultSet rs;
PreparedStatement ps;
Connection con;
    private void jButton3ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        try{
        Class.forName("com.mysql.cj.jdbc.Driver"); 
             con = DriverManager.getConnection("jdbc:mysql://localhost:3307/minisuper?serverTimezone=UTC","root","root"); 
             
        ps=con.prepareStatement("select * from ventas where idventa=?");
        ps.setString(1, txtVenta.getText());
        rs=ps.executeQuery();
        if(rs.next()){
            txtVenta.setText(rs.getString("idventa"));
            txtEmpleado.setText(rs.getString("idempl"));
            txtCliente.setText(rs.getString("nombrecliente"));
            cbPedido.setSelectedItem(rs.getString("espedido"));
            txtDireccion.setText(rs.getString("direccion"));
            txtCP.setText(rs.getString("codigopostal"));
            
        }else{
            System.out.println("no existe una venta con esta clave");
        }
        } catch (Exception e) {
            System.err.println(e);
        }
    }                                        

    private void jButton4ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        try{
        Class.forName("com.mysql.cj.jdbc.Driver"); 
             con = DriverManager.getConnection("jdbc:mysql://localhost:3307/minisuper?serverTimezone=UTC","root","root"); 
             
        ps=con.prepareStatement("UPDATE ventas SET idventa=?, idempl=?,nombrecliente=?, "
                + "espedido=?, direccion=?, codigopostal=?");
        ps.setString(1, txtVenta.getText());
        ps.setString(2, txtEmpleado.getText());
        ps.setString(3, txtCliente.getText());
        ps.setString(4, (String) cbPedido.getSelectedItem());
        ps.setString(5, txtCP.getText());
        int res=ps.executeUpdate();
        if(res>0){
            System.out.println("venta modificada");
        }else{
            System.out.println("no existe una venta con esta clave");
        }
        } catch (Exception e) {
            System.err.println(e);
        }
        consulta();
        limpiar();
    }                                        

    private void jButton5ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        try{
        Class.forName("com.mysql.cj.jdbc.Driver"); 
             con = DriverManager.getConnection("jdbc:mysql://localhost:3307/minisuper?serverTimezone=UTC","root","root"); 
             
        ps=con.prepareStatement("delete from ventas where idventa=?");
        ps.setString(1, txtVenta.getText());
        int res=ps.executeUpdate();
        if(res>0){
            System.out.println("venta eliminada");
        }else{
            System.out.println("error al eliminar venta");
        }
        } catch (Exception e) {
            System.err.println(e);
        }
        consulta();
        limpiar();
    }                                        

