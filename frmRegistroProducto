     Productos obj;
     public void limpiar(){
         txtCalve.setText(null);
    txtCantidad.setText(null);
    txtClavepro.setText(null);
    txtNombre.setText(null);
    txtPrecio.setText(null);
     }
    private void btnRegistrarActionPerformed(java.awt.event.ActionEvent evt) {                                             
    int clave=Integer.parseInt(txtCalve.getText());
    String Nombre=txtNombre.getText();
    double Precio=Double.parseDouble(txtPrecio.getText());
    int CantidadExis=Integer.parseInt(txtCantidad.getText());
    int claveProve=Integer.parseInt(txtClavepro.getText());
    obj=new Productos(clave, Nombre, Precio, CantidadExis, claveProve);
    consulta();
    
    limpiar();
    }                                            

    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        frmJefe obj=new frmJefe();
        obj.show();
        this.dispose();
    }                                        
ResultSet rs;
PreparedStatement ps;
Connection con;
    private void jButton2ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        try{
        Class.forName("com.mysql.cj.jdbc.Driver"); 
             con = DriverManager.getConnection("jdbc:mysql://localhost:3307/minisuper?serverTimezone=UTC","root","root"); 
             
        ps=con.prepareStatement("select * from productos where idproductos=?");
        ps.setString(1, txtCalve.getText());
        rs=ps.executeQuery();
        if(rs.next()){
            txtCalve.setText(rs.getString("idproductos"));
            txtNombre.setText(rs.getString("nombre"));
            txtPrecio.setText(rs.getString("presio"));
            txtCantidad.setText(rs.getString("cantidadexistencia"));
            txtClavepro.setText(rs.getString("idproveedor"));
        }else{
            System.out.println("no existe un producto con esta clave");
        }
        } catch (Exception e) {
            System.err.println(e);
        }
        consulta();
    }                                        

    private void jButton3ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        try{
        Class.forName("com.mysql.cj.jdbc.Driver"); 
             con = DriverManager.getConnection("jdbc:mysql://localhost:3307/minisuper?serverTimezone=UTC","root","root"); 
             
        ps=con.prepareStatement("UPDATE PRODUCTOS SET idproductos=?, nombre=?,presio=?, "
                + "cantidadexistencia=?, idproveedor=?");
        ps.setString(1, txtCalve.getText());
        ps.setString(2, txtNombre.getText());
        ps.setString(3, txtPrecio.getText());
        ps.setString(4, txtCantidad.getText());
        ps.setString(5, txtClavepro.getText());
        int res=ps.executeUpdate();
        if(res>0){
            System.out.println("producto modificado");
        }else{
            System.out.println("no existe un producto con esta clave");
        }
        } catch (Exception e) {
            System.err.println(e);
        }
        consulta();
        limpiar();
    }                                        

    private void jButton4ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        try{
        Class.forName("com.mysql.cj.jdbc.Driver"); 
             con = DriverManager.getConnection("jdbc:mysql://localhost:3307/minisuper?serverTimezone=UTC","root","root"); 
             
        ps=con.prepareStatement("delete from productos where idproductos=?");
        ps.setString(1, txtCalve.getText());
        int res=ps.executeUpdate();
        if(res>0){
            System.out.println("producto eliminado");
        }else{
            System.out.println("error al eliminar persona");
        }
        } catch (Exception e) {
            System.err.println(e);
        }
        consulta();
        limpiar();
    }                                        

